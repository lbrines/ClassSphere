# Ambiente
ENVIRONMENT=development
PORT=8000

# Configuración Python crítica
PYTHONPATH=/app/src  # Para importar módulos correctamente
PYTHONUNBUFFERED=1   # Para logs en tiempo real
UVICORN_HOST=127.0.0.1  # Para desarrollo local
UVICORN_PORT=8000

# Middleware Configuration
TRUSTED_HOST_ENABLED=false  # Deshabilitar para testing con curl
TRUSTED_HOST_ALLOWED=localhost,127.0.0.1,*.yourdomain.com

# JWT Configuration específica
JWT_SECRET=super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_MINUTES=10080 # 7 days
JWT_SUBJECT_FIELD=email  # Campo usado como 'sub' en JWT
JWT_INCLUDE_EMAIL=true   # Incluir email en payload
JWT_INCLUDE_ROLE=true    # Incluir role en payload

# OAuth 2.0 Google Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/oauth/google/callback
GOOGLE_API_SCOPES=https://www.googleapis.com/auth/classroom.courses,https://www.googleapis.com/auth/classroom.rosters.readonly,https://www.googleapis.com/auth/userinfo.email,https://www.googleapis.com/auth/userinfo.profile
DEFAULT_MODE=MOCK # MOCK or GOOGLE

# Database
MONGODB_URL=mongodb://localhost:27017/dashboard_educativo_dev
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
