# Dashboard Educativo Backend - Environment Variables
# Copy this file to .env and configure your values

# Application Settings
APP_NAME="Dashboard Educativo"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=127.0.0.1
PORT=8000
WORKERS=1

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=dashboard_educativo
MONGODB_COLLECTION_USERS=users
MONGODB_COLLECTION_COURSES=courses
MONGODB_COLLECTION_METRICS=metrics

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth 2.0 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/classroom.courses.readonly,https://www.googleapis.com/auth/classroom.rosters.readonly

# Google Classroom API
GOOGLE_CLASSROOM_API_VERSION=v1
GOOGLE_API_RATE_LIMIT=100
GOOGLE_API_RATE_WINDOW=100

# Security Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Cache Configuration
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=3

# Mock Service Configuration (for development/testing)
MOCK_SERVICE_ENABLED=false
MOCK_DATA_PATH=./mock_data/

# Error Prevention Settings
ERROR_PREVENTION_ENABLED=true
AUTO_CLEANUP_ENABLED=true
CONTEXT_MANAGER_TIMEOUT=30

# Performance Settings
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
REQUEST_TIMEOUT=60

# Monitoring Settings
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30