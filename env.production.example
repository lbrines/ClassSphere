# ========================================
# ClassSphere - Production Environment
# Copy this file to .env and fill in your values
# Command: cp env.production.example .env
# ========================================

# ========================================
# Application Settings
# ========================================
APP_ENV=production

# ========================================
# JWT Configuration (REQUIRED)
# ========================================
# Generate a strong secret key (minimum 32 characters)
# Example: openssl rand -base64 48
JWT_SECRET=change-this-to-a-secure-random-string-with-at-least-32-characters

# JWT issuer and expiry
JWT_ISSUER=classsphere
JWT_EXPIRY_MINUTES=60

# ========================================
# Google OAuth 2.0 (REQUIRED)
# ========================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=123456789-abcdefghijklmnop.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-YourSecretHere
GOOGLE_REDIRECT_URL=https://yourdomain.com/auth/callback

# ========================================
# Google Classroom Integration
# ========================================
# Mode: "mock" (testing) or "google" (production)
CLASSROOM_MODE=google

# ========================================
# Server Configuration
# ========================================
# Backend port (default: 8080)
BACKEND_PORT=8080

# Frontend port (default: 80)
FRONTEND_PORT=80

# Redis port (default: 6379)
REDIS_PORT=6379

# ========================================
# Redis Configuration
# ========================================
REDIS_ADDR=redis:6379

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

